<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/beer_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/beer_avatar"
            android:layout_width="@dimen/image_size_display"
            android:layout_height="@dimen/image_size_display"
            android:layout_marginEnd="10dp"
            android:background="@android:color/holo_blue_dark"
            android:contentDescription="@id/beer_avatar" />

        <TextView
            style="@style/TextTypography.Body.Large"
            android:id="@+id/beer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/beer_avatar" />

        <TextView
            style="@style/TextTypography.Body1"
            android:id="@+id/beer_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/beer_name"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/beer_avatar" />

        <Button
            android:id="@+id/beer_buy_btn"
            android:text="@string/action_buy_beer"
            android:layout_width="@dimen/button_size_width"
            android:layout_height="@dimen/button_size_height"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
